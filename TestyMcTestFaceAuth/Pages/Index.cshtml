@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-12">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-action="Login" asp-controller="Account" class="btn btn-default">Log In with Google</a>
        }
        else
        {
            <div class="row">
                <div class="col-md-10">
                    <h4>@Model.GoogleId</h4>
                    <h4>@Model.GoogleUrl</h4>
                    <p><i class="fab fa-github"></i><a href="@Model.GoogleUrl">@Model.GoogleLogin</a></p>
                </div>
            </div>
        }
    </div>
</div>